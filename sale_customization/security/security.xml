<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="group_sales_manager" model="res.groups">
        <field name="name">Sales Manager</field>
    </record>
    <record id="group_directors" model="res.groups">
        <field name="name">Directors</field>
    </record>
    <record id="access_sale_order_sales_manager" model="ir.model.access">
        <field name="name">sale.order access for Sales Manager</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="group_id" ref="group_sales_manager"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

</odoo>