<odoo>
    <data>

        <record id="ir_cron_salesperson_inactive" model="ir.cron">
            <field name="name">Salesperson Inactive Customers</field>
            <field name="model_id" ref="model_res_partner"/>
            <field name="state">code</field>
            <field name="code">model.set_customers_inactive()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
