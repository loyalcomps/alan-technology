    <!-- wizard view -->
    <record id="vendor_outstanding_statement_wizard_view" model="ir.ui.view">
        <field name="name">Vendor Outstanding Statement Wizard</field>
        <field name="model">vendor.outstanding.statement</field>
        <field name="arch" type="xml">
            <form name="Report Options">
                <div style="text-align:justify">
                <span class="o_form_label">The outstanding statement provides details of all outstanding
                    Vendor Payables up to a particular date. This includes all unpaid invoices, unclaimed
                    refunds and outstanding payments. The list is displayed in chronological order and is
                    split by currencies</span>
                    <br/><br/>
                </div>
                <hr/>
                <group name="main_info">
                    <field name="partner_id" string="Vendor"  filter_domain="[('is_supplier','=',True)]" required="1"/>
                    <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                </group>
                <group name="dates">
                    <field name="end_date"/>
                </group>
                <footer>
                    <button name="button_export_pdf" string="Export PDF" type="object" default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="vendor_outstanding_statement_wizard_action" model="ir.actions.act_window">
        <field name="name">Vendor Outstanding Statement</field>
        <field name="target">new</field>
        <field name="res_model">vendor.outstanding.statement</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="vendor_outstanding_statement_wizard_view"/>
    </record>
