<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="check_print_rak">

        <t t-name="kg_sale.check_print_rak">
            <t t-call="web.html_container">

                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div style="position: fixed;font-size: 15px; top: 60; right: 0; left: 630; margin: 1px 1px 1px 1px; padding : 1px;  width: 150px;  height: 30px;      background-color: white;  border: 0px solid black;  z-index: 1;">
                            <b>
                                <span t-esc="o.date" t-options='{"widget": "date","format": "dd-MM-yyyy"}'/>
<!--                                <span t-field="o.date"-->
<!--                                      t-field-options="{&quot;format&quot;: &quot;dd - MMM - yyyy&quot;}"/>-->
                            </b>
                        </div>

                        <div t-if="o.payment_type=='outbound'">

                            <div style="position: fixed;font-size: 15px; top: 133; left: 138; margin: 1px 1px 1px 1px; padding : 1px;  width: 550px;  height: 30px;      background-color: white;  border: 0px solid black;  z-index: 1;">

                                <b>
                                    <b>
                                        <t t-if="not o.kg_other_name">

                                            <span t-field="o.partner_id"/>
                                        </t>
                                        <t t-if="o.kg_other_name">

                                            <span t-field="o.kg_other_name"/>
                                        </t>
                                    </b>
                                </b>
                            </div>
                        </div>
                        <div t-if="o.payment_type=='inbound' ">

                            <div style="position: fixed;font-size: 15px; top: 133; right: 20; left: 162; margin: 1px 1px 1px 1px; padding : 1px;  width: 550px;  height: 30px;      background-color: white;  border: 0px solid black;  z-index: 1;">

                                <b>
                                    <b>
                                        <t t-if="not o.kg_other_name">

                                            <span t-field="o.partner_id"/>
                                        </t>
                                        <t t-if="o.kg_other_name">

                                            <span t-field="o.kg_other_name"/>
                                        </t>
                                    </b>
                                </b>
                            </div>
                        </div>
                        <t t-if="o.kg_amount_words">
                            <div style=" position: absolute;font-size: 15px; top: 175; right: 0; left: 9 ; text-indent:50px;  width: 480px; 0px;line-height: 225%;">
                                <b>
                                    <span t-esc="o.kg_amount_words"/>
                                    Only
                                </b>
                            </div>
                        </t>


                        <t t-if="not o.kg_amount_words">
                            <div style=" position: absolute;font-size: 15px; top: 175; right: 0; left: 9 ; text-indent:50px;  width: 480px; 0px;line-height: 225%;">
                                <b>
                                    <span t-esc="o.currency_id.amount_to_text(o.amount)"/>
<!--                                        <span t-esc="o.amount" t-esc-options="{'widget': 'num2words', 'case': 'capital'}"/>-->
<!--                                    <span t-esc="o.amount"-->
<!--                                          t-esc-options="{&quot;widget&quot;: &quot;num2words&quot;,&quot;case&quot;:&quot;capital&quot;}"/>-->
                                    Only
                                </b>
                            </div>
                        </t>
                        <div style="position: absolute;font-size: 15px; top: 220; right: 0; left: 655; margin: 1px 1px 1px 1px; padding : 1px;  width: 150px;  height: 30px;      background-color: white;  border: 0px solid black;  z-index: 1;">
                            <b>
                                **
                                <!--                                <span t-field="o.amount"/>-->
                                <span t-esc="o.amount" t-esc-options='{"widget": "num2words","case":"capital"}'/>
                                <span t-field="o.currency_id"/>
                            </b>
                        </div>
                    </div>
                </t>
            </t>
        </t>


    </template>
</odoo>
