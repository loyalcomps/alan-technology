     <record id="proforma_invoice_report_actions" model="ir.actions.report">
            <field name="name">Proforma Invoice</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">kg_sale.proforma_invoice_report</field>
            <field name="report_file">kg_sale.proforma_invoice_report</field>
            <field name="paperformat_id" ref="kg_sale.proforma_paper_format_alan"/>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
            <field name="binding_type">report</field>
        </record>


</odoo>