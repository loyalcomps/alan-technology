<odoo>
    <data noupdate="1">

        <record id="sequence_pdc_payment" model="ir.sequence">
            <field name="name">PDC Sequence</field>
            <field name="code">pdc.payment</field>
            <field name="prefix">PDC/</field>
            <field name="padding">5</field>
            <field eval="False" name="company_id"/>
        </record>

        <!-- Payment methods -->
        <record id="account_payment_method_pdc_in" model="account.payment.method">
            <field name="name">Post Dated Cheque</field>
            <field name="code">pdc</field>
            <field name="payment_type">inbound</field>
        </record>
        <record id="account_payment_method_pdc_out" model="account.payment.method">
            <field name="name">Post Dated Cheque</field>
            <field name="code">pdc</field>
            <field name="payment_type">outbound</field>
        </record>
    </data>
</odoo>