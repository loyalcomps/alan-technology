<odoo>
    <data>

        <record id="view_account_pdc_register_form" model="ir.ui.view">
            <field name="name">account.pdc.register.form</field>
            <field name="model">account.pdc.register</field>
            <field name="arch" type="xml">
                <form string="PDC Payment">
                    <!-- Invisible fields -->
                    <field name="line_ids" invisible="1"/>
                    <field name="payment_type" invisible="1" force_save="1"/>
                    <field name="partner_type" invisible="1" force_save="1"/>
                    <field name="company_id" invisible="1" force_save="1"/>
                    <field name="partner_id" invisible="1" force_save="1"/>

                    <field name="company_currency_id" invisible="1"/>

                    <group>
                        <group name="group1">
                            <label for="amount"/>
                            <div name="amount_div" class="o_row">
                                <field name="amount"/>
                                <field name="currency_id"
                                       required="1"
                                       options="{'no_create': True, 'no_open': True}"
                                       groups="base.group_multi_currency"/>
                            </div>
                            <field name="cheque_reference"/>
                            <field name="journal_id" options="{'no_open': True, 'no_create': True}" required="1"/>
                            <field name="payment_method_line_id"
                                   required="1" options="{'no_create': True, 'no_open': True}" invisible="1"/>
                        </group>
                        <group name="group2">

                            <field name="payment_date"/>
                            <field name="pdc_date"/>
                            <field name="communication"/>
                            <field name="partner_bank_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="pdc_register_attachment_ids" widget="many2many_binary" string="Attach a file"/>
                    </group>
                    <footer>
                        <button string="Register PDC" name="action_create_payments" type="object" class="oe_highlight"
                                data-hotkey="q"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>