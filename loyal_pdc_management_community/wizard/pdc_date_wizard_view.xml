<odoo>
    <data>

        <record id="view_account_pdc_date" model="ir.ui.view">
            <field name="name">account.pdc.date.form</field>
            <field name="model">account.pdc.date</field>
            <field name="arch" type="xml">
                <form string="Register PDC">
                    <field name="company_id" invisible="1"/>
                    <field name="payment_ids" invisible="1"/>
                    <group>
                        <group>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="journal_id"/>
                        </group>
                    </group>
                    <footer>
                        <button string='OK' name="change_details" type="object" class="btn-primary" data-hotkey="q"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_account_pdc_date" model="ir.actions.act_window">
            <field name="name">PDC Done</field>
            <field name="res_model">account.pdc.date</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_account_pdc_date"/>
            <field name="target">new</field>
            <field name="groups_id" eval="[(4, ref('account.group_account_invoice'))]"/>
        </record>

    </data>
</odoo>