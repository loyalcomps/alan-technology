<odoo>
    <data>
        <record id="account_move_pdc_form" model="ir.ui.view">
            <field name="name">account.move.pdc.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='journal_div']" position="after">
                    <field name="pdc_payment_state" attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'in_invoice'))]}"/>
                </xpath>
                <xpath expr="//button[@name='action_register_payment']" position="after">
                    <button name="action_register_pdc_payment" id="account_invoice_pdc_payment_btn"
                                type="object" class="oe_highlight"
                                attrs="{'invisible': ['|', '|', ('state', '!=', 'posted'), ('payment_state', 'not in', ('not_paid', 'partial')), ('move_type', 'not in', ('out_invoice', 'in_invoice'))]}"
                                context="{'dont_redirect_to_payments': True}"
                                string="Register PDC" data-hotkey="g"
                                groups="account.group_account_invoice"/>
                </xpath>
            </field>
        </record>

        <record id="account_move_pdc_tree" model="ir.ui.view">
            <field name="name">account.move.pdc.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_state']" position="after">
                    <field name="pdc_payment_state" optional="show" attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'in_invoice'))]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>