<!--            Click to add new Payment Extension. -->
<!--          </p>-->
<!--        </field>-->
    </record>

    <menuitem action="action_kg_payment_extension"
            id="action_kg_payment_extension_id" parent="crm.crm_menu_config"
            sequence="12"/>
 </data>
</odoo>
