<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="company_seal_form_view" model="ir.ui.view">
        <field name="name">res.company.inherit.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//sheet//field[@name='phone']" position="after">
                    <field name="company_seal"/>
                </xpath>
                <xpath expr="//page[@name='general_info']" position="after">
                    <page string="Report Header"  name="report_header">
                        <field name="company_details"/>
                    </page>
                </xpath>
            </data>
        </field>
    </record>

</odoo>