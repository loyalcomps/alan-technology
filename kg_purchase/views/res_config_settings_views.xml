<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_kg_purchase" model="ir.ui.view">
		<field name="name">res.config.settings.view.form.inherit.kg.purchase</field>
		<field name="model">res.config.settings</field>
		<field name="priority" eval="25"/>
		<field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
		<field name="arch" type="xml">
			<xpath expr="//div[@data-key='purchase']" position="inside">
                <h2>Purchase Approval</h2>
				<div class="row mt16 o_settings_container">
					<div class="col-12 col-lg-6 o_setting_box">
						<div class="o_setting_left_pane">
							<field name="purchase_document_approve"/>
						</div>
						<div class="o_setting_right_pane">
							<label for="purchase_document_approve"/>
							<div class="text-muted">
								Enable this field for making the purchase orders validate button visible/invisible based
								on partner signature
							</div>
						</div>
					</div>
				</div>
            </xpath>
        </field>
    </record>
</odoo>