        <xpath expr="//t[@t-set='address']" position="replace">
            <table width="100%" class="table-borderless">
                <tr>
                    <td width="50%">
                        <div t-field="o.partner_id"
                             t-options='{"widget": "contact", "fields": ["address", "name", "phone", "vat"], "no_marker": True, "phone_icons": True}'/>
                    </td>
                    <td width="50%">
                        <t t-if="o.dest_address_id">
                        <strong style="margin-left:37%">Shipping address:</strong>
                        <div style="margin-left:37%" t-field="o.dest_address_id"
                             t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'
                             name="purchase_shipping_address"/>
                         </t>
                    </td>
                </tr>
            </table>
        </xpath>
        <xpath expr="//div[@id='informations']" position="inside">
           <!--  <div t-if="o.name" class="col-3">
                <strong>Our Order Reference:</strong>
                <p t-field="o.name"/>
            </div> -->
              <div t-if="o.payment_term_id" class="col-3">
                <strong>Payment Term:</strong>
                <p t-field="o.payment_term_id.name"/>
            </div>
        </xpath>

        <xpath expr="//div[@t-if='o.user_id']" position="replace">
           <div t-if="o.date_order" class="col-3 bm-2">
                    <strong>Order Date:</strong>
                    <p t-field="o.date_order" class="m-0"/>
           </div>
        </xpath>
        <xpath expr="//div[@id='informations']/div[3]" position="replace">
            <div t-if="o.state in ['purchase','done'] and o.date_approve" class="col-3 bm-2">
                    <strong>Confirmation Date:</strong>
                    <p t-field="o.date_approve" class="m-0"/>
                </div>
        </xpath>
        <xpath expr="//div[@id='informations']/div[4]" position="replace">
           
        </xpath>
         <xpath expr="//div[@id='informations']/div[@t-if='o.partner_ref']" position="replace">
           
        </xpath>
        <xpath expr="//span[@t-field='line.price_subtotal']" position="replace">
            <span t-field="line.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;}"/>
        </xpath>
        <xpath expr="//th[@name='th_quantity']" position="replace">
            <th name="th_quantity" class="text-left"><span style="margin-left:-40%"><strong>Qty</strong></span></th>
        </xpath>



        <xpath expr="//div[@id='total']" position="after">
           <div style="text-align:left;">
                            Amount in words:
                            <span t-esc="o.currency_id.amount_to_text(o.amount_total).title()"/>
                            ONLY
           </div>
            <br/>
            <br/>
            <table class="table table-borderless">
                    <tr><td width="20%" colspan="3"><span style="font-weight:bold">Authorized By</span></td></tr>
                    <tr><td width="20%"><span style="font-weight:bold">Name</span></td><td width="3%">:</td><td><span t-esc="o.create_uid.partner_id.name"></span></td></tr>
                    <tr><td width="20%"><strong>Designation</strong></td><td width="3%">:</td><td><span t-esc="o.create_uid.partner_id.function"></span></td></tr>
                    <tr><td width="20%">Contact</td><td width="3%">:</td><td><span t-esc="o.create_uid.partner_id.phone"></span></td></tr>
                    <tr><td width="20%">Signature</td><td width="5%">:</td><td width="50%"><img style="max-height: 150px;max-width: 150px;" t-if="o.create_uid.kg_sign_signature" t-att-src="image_data_uri(o.create_uid.kg_sign_signature)" alt="Logo"/>
                    </td></tr>
<!--                    <tr><td width="30%" colspan="2"><img style="max-height: 100px;" t-if="o.create_uid.kg_sign_signature" t-att-src="image_data_uri(o.create_uid.kg_sign_signature)" alt="Logo"/>-->
<!--                    </td></tr>-->
            </table>
        </xpath>
        <xpath expr="//th[@name='th_description']" position="replace">
           <th name="th_description" width="35%"><strong>Description</strong></th>
        </xpath>
        <xpath expr="//th[@name='th_amount']" position="replace">
            <th name="th_amount" class="text-left">
                <strong>Net Price(AED)</strong>
            </th>
        </xpath>
        <xpath expr="//th[@name='th_description']" position="before">
            <th name="th_si" class="text-left">
                <strong>Sl.No</strong>
            </th>
        </xpath>
        <xpath expr="//thead" position="inside">
            <t t-set="count" t-value="0"/>
        </xpath>
        <xpath expr="//p[@t-field='o.date_approve']" position="replace">
            <p t-field="o.date_approve" t-options="{&quot;widget&quot;: &quot;date&quot;,&quot;format&quot;: &quot;dd-MM-yyyy&quot;}" class="m-0"/>
        </xpath>
        <xpath expr="//p[@t-field='o.date_order']" position="replace">
            <p t-field="o.date_order" t-options="{&quot;widget&quot;: &quot;date&quot;,&quot;format&quot;: &quot;dd-MM-yyyy&quot;}" class="m-0"/>
        </xpath>
         <xpath expr="//span[@t-field='line.price_subtotal']" position="replace">
            <span t-esc="'%.2f'%(line.price_subtotal)"/>
        </xpath>
         <xpath expr="//span[@t-field='line.date_planned']" position="replace">
            <p t-field="line.date_planned" t-options="{&quot;widget&quot;: &quot;date&quot;,&quot;format&quot;: &quot;dd-MM-yyyy&quot;}" class="m-0"/>
        </xpath>
        <xpath expr="//td[@id='product']" position="before">
            <td id="product">
                <t t-set="count" t-value="count+1"/>
                <span t-esc="count"/>
            </td>
        </xpath>
