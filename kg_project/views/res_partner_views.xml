<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_view_issues" model="ir.actions.act_window">
        <field name="res_model">project.issue</field>
        <field name="view_mode">tree,form,calendar,graph</field>
        <field name="domain">[('partner_id', '=', active_id)]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.view" id="edit_res_inherited_from">
        <field name="name">res.partner</field>
        <field name="model">res.partner</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/sheet" position="before">
                <heade>
                    <field name="kg_is_create" invisible="1"/>
                </heade>
            </xpath>
            <div name="button_box" position="inside">
                <button name="%(action_view_issues)d" class="oe_stat_button" type="action"
                        icon="fa-exclamation-triangle">
                    <field string="Issues" name="issue_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>
</odoo>