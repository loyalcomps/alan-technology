<odoo>
    <data>
        <record id="res_config_settings_form" model="ir.ui.view">
            <field name="name">res.config.settings.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='account']/div[@id='print_vendor_checks_setting_container']" position="after">
                    <h2>PDC Payment</h2>
                    <div class="row mt16 o_settings_container" id="pdc_payment_settings">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="pdc_customer_account"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="pdc_customer_account" class="o_light_label"
                                        options="{'no_create': True}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="pdc_supplier_account"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="pdc_supplier_account" class="o_light_label"
                                               options="{'no_create': True}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </xpath>
            </field>
        </record>

    </data>
</odoo>