<odoo>
    <data>

        <record id="pdc_payment_form_view" model="ir.ui.view">
            <field name="name">pdc.payment.form.view</field>
            <field name="model">pdc.payment</field>
            <field name="arch" type="xml">
                <form string="PDC Payment">
                    <header>

                        <button name="register_pdc_cheque" string="Register PDC Cheque" type="object"
                                class="oe_highlight" states="draft"/>
                        <button name="deposit_pdc_cheque" string="Deposit" type="object"
                                class="oe_highlight"  states="registered,returned,bounced"/>
                        <button name="register_bounced_pdc_cheque" string="Register" type="object"
                                class="oe_highlight"  states="bounced"/>
                        <button name="return_pdc_cheque" string="Return" type="object"
                                class="oe_highlight" states="registered"/>
                        <button name="cancel_pdc_cheque" string="Cancel" type="object"
                                states="registered,draft,returned,bounced"/>
                        <button name="bounce_pdc_cheque" string="Bounce" type="object"
                                class="oe_highlight" states="deposited" groups="loyal_pdc_management.group_account_treasury_user"/>
                        <button name="%(action_view_account_pdc_date)d" string="Done" type="action"
                                class="oe_highlight" states="deposited" groups="loyal_pdc_management.group_account_treasury_user"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,registered,returned,deposited,bounced,done,cancel"
                               statusbar_colors='{"cancel":"red", "done":"green"}'/>
                    </header>
                    <sheet>
                        <!-- Invisible fields -->
                        <field name="partner_type" invisible="1"/>
                        <field name="company_id" invisible="1"/>

                        <div class="oe_button_box" name="button_box">

                            <button name="button_open_invoices" type="object"
                                    class="oe_stat_button" icon="fa-bars"
                                    attrs="{'invisible': [('reconciled_move_count','=', 0)]}">
                                <field name="reconciled_move_count"/>
                                <span attrs="{'invisible': [('payment_type','!=','inbound')]}">Invoice</span>
                                <span attrs="{'invisible': [('payment_type','=','inbound')]}">Bill</span>
                            </button>
                            <!-- Journal Entry  button -->
                            <button name="button_open_journal_entry" type="object" class="oe_stat_button" icon="fa-bars">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">Journal Entry</span>
                                </div>
                            </button>
                        </div>

                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="payment_type" widget="radio" options="{'horizontal': True}"
                                        attrs="{'readonly': [('state', '!=', 'draft')]}" />
                                <field name="partner_id" context="{'default_is_company': True}" string="Customer"
                                       attrs="{'readonly':[('state', '!=', 'draft')],
                                             'invisible':[('partner_type','!=','customer')]}"/>
                                <field name="partner_id" context="{'default_is_company': True}" string="Vendor"
                                       attrs="{'readonly':[('state', '!=', 'draft')],
                                               'invisible':[('partner_type','!=','supplier')]}"/>
                                <label for="amount"/>
                                <div name="amount_div" class="o_row">
                                    <field name="amount" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    <field name="currency_id"
                                               options="{'no_create': True, 'no_open': True}"
                                               required="1"
                                               attrs="{'readonly': [('state', '!=', 'draft')]}"
                                               groups="base.group_multi_currency"/>
                                </div>
                                <field name="cheque_reference" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="journal_id" options="{'no_create': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="payment_method_line_id" required="1" options="{'no_create': True, 'no_open': True}"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>

                            </group>
                            <group>
                                <field name="date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="pdc_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="accounting_date" readonly="1" force_save="1" attrs="{'invisible': [('state', '!=', 'done')]}"/>
                                <field name="agent_bank" options="{'no_create': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="ref" string="Memo" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="attachment_count" invisible="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="pdc_attachment_ids" widget="many2many_binary" string="Attach a file" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="pdc_payment_tree_view" model="ir.ui.view">
            <field name="name">pdc.payment.tree</field>
            <field name="model">pdc.payment</field>
            <field name="arch" type="xml">
                <tree edit="false" sample="1" decoration-info="state == 'draft'" decoration-muted="state == 'cancel'">
                    <header>
                        <button name="print_csv" type="object" string="Print CSV"/>
                    </header>
                    <field name="currency_id" invisible="1"/>
                    <field name="date"/>
                    <field name="name"/>
                    <field name="journal_id"/>
                    <field name="payment_method_line_id" invisible="1"/>
                    <field name="partner_id" string="Partner"/>
                    <field name="amount" string="Amount" groups="base.group_multi_currency" />
                    <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'done'"/>
                </tree>
            </field>
        </record>

        <record id="view_pdc_payment_search" model="ir.ui.view">
            <field name="name">pdc.payment.search</field>
            <field name="model">pdc.payment</field>
            <field name="arch" type="xml">
                <search string="PDC Payments">
                    <field name="name" string="Payment"
                        filter_domain="['|', '|', ('name', 'ilike', self), ('partner_id', 'ilike', self), ('ref', 'ilike', self)]"/>
                    <field name="partner_id" string="Customer/Vendor"/>
                    <separator/>
                    <filter string="Customer Payments"
                            name="inbound_filter"
                            domain="[('payment_type', '=', 'inbound')]"/>
                    <filter string="Vendor Payments"
                            name="outbound_filter"
                            domain="[('payment_type', '=', 'outbound')]"/>
                    <separator/>
                    <filter string="Draft" name="state_draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Done" name="state_done" domain="[('state', '=', 'done')]"/>
                    <separator/>
                    <separator/>
                    <filter string="Payment Date" name="date" date="date"/>
                    <filter string="PDC Date" name="pdc_date" date="pdc_date"/>
                    <separator/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <filter string="Customer/Vendor" name="partner" domain="[]" context="{'group_by': 'partner_id'}"/>
                    <filter string="Status" name="state" domain="[]" context="{'group_by': 'state'}"/>
                    <filter string="Payment Date" name="groupby_date" domain="[]" context="{'group_by': 'date'}"/>
                    <filter string="Currency" name="currency" domain="[]" context="{'group_by': 'currency_id'}" groups="base.group_multi_currency"/>
                    <filter string="Company" name="company" domain="[]" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </search>
            </field>
        </record>

        <record id="pdc_payment_form_action" model="ir.actions.act_window">
            <field name="name">PDC Payment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pdc.payment</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{
                'default_payment_type': 'inbound',
                'default_partner_type': 'customer',
            }</field>
            <field name="view_id" ref="pdc_payment_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                  Register a PDC payment
                </p>
            </field>
        </record>

        <menuitem action="pdc_payment_form_action" id="menu_pdc_payment_form_action"
                  parent="account_accountant.menu_accounting" sequence="5" name="PDC Payment"/>

        <record id="action_account_invoice_from_list" model="ir.actions.server">
            <field name="name">Register PDC</field>
            <field name="groups_id" eval="[(4, ref('account.group_account_invoice'))]"/>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                if records:
                    action = records.action_register_pdc_payment()
            </field>
        </record>
    </data>
</odoo>