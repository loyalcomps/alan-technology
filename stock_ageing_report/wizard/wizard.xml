<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    <data>-->
    <record id="dev_inventory_wizard_view" model="ir.ui.view">
        <field name="name">Stock Ageing Report</field>
        <field name="model">stock.ageing</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <separator string="Stock Ageing Report"/>
                <group>
                    <field name="company_id" widget="selection" required="1"/>
                    <field name="warehouse_id" widget="selection" required="1"
                           domain="[('company_id','=',company_id)]"/>
                    <field name="location_id" widget="selection" required="1" domain="[('company_id','=',company_id)]"/>
                    <field name="kg_brand_id" widget="selection" required="1"/>
                    <field name="product_category_id" widget="selection" domain="[('kg_brand_id','=',kg_brand_id)]"/>
                    <field name="product_id" widget="selection"
                           domain="[('categ_id','=',product_category_id),('kg_brand_id','=',kg_brand_id)]"/>
                    <field name="period_length" required="1"/>
                    <field name="date_from" required="1"/>
                </group>
                <footer>
                    <button name="print_ageing_pdf_report" string="Print" type="object" class="oe_highlight"/>
                    <button name="print_xlsx" string="Print XLSX" type="object" class="btn-primary"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_inventory_wizard_view" model="ir.actions.act_window">
        <field name="name">Stock Ageing Report</field>
        <field name="res_model">stock.ageing</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="dev_inventory_wizard_view"/>
        <field name="target">new</field>
    </record>


    <menuitem
            name="Stock Ageing Report"
            action="action_inventory_wizard_view"
            id="menu_dev_inventory_wizard"
            parent="stock.menu_warehouse_report"/>
</odoo>
