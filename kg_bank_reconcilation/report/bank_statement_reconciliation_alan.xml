                    </div>

                    <br/>

                    <table
                           style="border-right:1px solid black;border-left:1px solid black;border-top:1px solid black;border-bottom:1px solid black; font-size:13px;font-color:red;">
                        <thead>
                            <col style="width: 10%;"/>
                            <col style="width: 10%;"/>
                            <col style="width: 20%;"/>
                            <col style="width: 40%;"/>
                            <col style="width: 10%;"/>
                            <col style="width: 10%;"/>
                            <tr>
                                <th class="text-center" style="border-right:1px solid black">Sl#</th>


                                <th class="text-center" style="border-right:1px solid black">Date</th>
                                <th class="text-center" style="border-right:1px solid black">Reference</th>
                                <th class="text-center" style="border-right:1px solid black">Partner</th>
                                <th class="text-center" style="border-right:1px solid black">Debit</th>
                                <th class="text-center" style="border-right:1px solid black">Credit</th>


                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="count" t-value="0"/>

                            <tr style="page-break-inside:avoid;border:1px solid black;"
                                t-foreach="o.statement_lines.filtered(lambda l: not l.statement_date)" t-as="line">

                                <t t-set="count" t-value="count + 1"/>

                                <td class="text-center"
                                    style="border-right:1px solid black;border-bottom:1px solid black">
                                    <span t-esc="count"/>
                                </td>


                                <td class="text-left"
                                    style="border-right:1px solid black;border-bottom:1px solid black">
                                    <span t-field="line.date"/>
                                </td>

                                <td class="text-left"
                                    style="border-right:1px solid black;border-bottom:1px solid black">

                                    <span t-field="line.ref"/>
