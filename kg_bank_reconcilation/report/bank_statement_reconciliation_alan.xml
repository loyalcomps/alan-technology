<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_bank_stmnt_reconciliation_alan">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page article o_report_layout_standard" style="font-size: 12pt;arial;">
                    <center>
                        <h3>
                            <strong>Bank Reconcilation Statement</strong>
                        </h3>
                    </center>
                    <br/>
                    <br/>
                    <div class="row">
                        <table class="table table-borderless" style="border-collapse: collapse;width:100%">
                            <tr>
                                <td width="60%">
                                    <table style="border-collapse: collapse;">
                                        <tr height="1%">
                                            <td width="20%">
                                                <span>Bank</span>
                                            </td>
                                            <td width="2%">
                                                <span style="margin-left:2%">:</span>
                                            </td>
                                            <td>
                                                <span style="margin-left:2%" t-field="o.journal_id.name"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td width="20%">
                                                <span>Date From</span>
                                            </td>
                                            <td width="2%">
                                                <span style="margin-left:2%">:</span>
                                            </td>
                                            <td>
                                                <span style="margin-left:2%" t-field="o.date_from"
                                                      t-field-options="{&quot;format&quot;:&quot;dd/MM/yyyy&quot;}"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td width="20%">
                                                <span>Date To</span>
                                            </td>
                                            <td width="2%">
                                                <span style="margin-left:2%">:</span>
                                            </td>
                                            <td>
                                                <span style="margin-left:2%" t-field="o.date_to"
                                                      t-field-options="{&quot;format&quot;:&quot;dd/MM/yyyy&quot;}"/>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                                <td width="40%">
                                    <table style="border-collapse: collapse;">
                                        <tr>
                                            <td width="50%">
                                                <span>Book Balance</span>
                                            </td>
                                            <td width="2%">
                                                <span style="margin-left:2%">:</span>
                                            </td>
                                            <td>
                                                <span style="margin-left:2%"
                                                      t-esc="'{:,.2f}'.format(o.gl_balance)"></span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span>Bank Balance</span>
                                            </td>
                                            <td width="2%">
                                                <span style="margin-left:2%">:</span>
                                            </td>
                                            <td>
                                                <span style="margin-left:2%"
                                                      t-esc="'{:,.2f}'.format(o.bank_balance)"></span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span>Reconciled Balance</span>
                                            </td>
                                            <td width="2%">
                                                <span style="margin-left:2%">:</span>
                                            </td>
                                            <td>
                                                <span style="margin-left:2%">
                                                    <span style="margin-left:2%"
                                                          t-esc="'{:,.2f}'.format(o.get_reconcile())"></span>
                                                </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span>Unreconciled Balance</span>
                                            </td>
                                            <td width="1%">
                                                <span style="margin-left:2%">:</span>
                                            </td>
                                            <td>
                                                <span style="margin-left:2%">
                                                    <span style="margin-left:2%"
                                                          t-esc="'{:,.2f}'.format(o.get_unreconcile())"></span>
                                                </span>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>
